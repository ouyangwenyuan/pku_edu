<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/group_9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/fifteen_dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_act_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_user_avatar"
                android:layout_centerHorizontal="true"
                android:textColor="@color/main_dark_theme"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_act_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_user_avatar"
                android:layout_centerHorizontal="true"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_act_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_user_avatar"
                android:layout_centerHorizontal="true"
                android:textColor="@color/main_dark_theme"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_act_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_user_avatar"
                android:layout_centerHorizontal="true"

                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>